{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start HTTP Server",
            "type": "node",
            "request": "launch",
            "program": "${env:HOME}/.nvm/versions/node/v22.15.0/bin/npx",
            "args": [
                "http-server",
                ".",
                "-p",
                "8080",
                "-o",
                "-c-1"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
